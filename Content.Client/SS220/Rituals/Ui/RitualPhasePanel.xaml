
<Control xmlns="https://spacestation14.io">
    <BoxContainer Margin="8,8,8,8" Orientation="Vertical">
        <BoxContainer Orientation="Horizontal">
            <Label Name="RitualStepName" HorizontalExpand="True" />
            <Button
                Name="PerformRitualStepName"
                MinWidth="64"
                HorizontalAlignment="Right"
                Access="Public" />
        </BoxContainer>
        <PanelContainer StyleClasses="HighDivider" />  <!-- Check all StyleClasses -->
        <BoxContainer HorizontalExpand="True" Orientation="Horizontal">
            <TextureRect
                Name="RitualStepTexture"
                Margin="0,0,4,0"
                MinSize="48 48"
                Stretch="KeepAspectCentered" />
            <Control MinWidth="5"/>
            <RichTextLabel Name="PerformRitualStepDescription" />
        </BoxContainer>
    </BoxContainer>
</Control>
